<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/request_list_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/request_method_box"
        android:layout_width="36dp"
        android:layout_height="18dp"
        style="@style/Restly.Request.MethodBox"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <com.google.android.material.textview.MaterialTextView
                android:id="@+id/request_method_label"
                style="@style/Restly.Request.MethodText"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </RelativeLayout>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/request_name_label"
        style="@style/Restly.Request.NameText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/request_method_box"
        app:layout_constraintTop_toTopOf="@+id/request_method_box" />

    <com.google.android.material.textview.MaterialTextView
        android:id="@+id/request_url_label"
        style="@style/Restly.Request.UrlText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/request_name_label"
        app:layout_constraintTop_toBottomOf="@+id/request_name_label" />

</androidx.constraintlayout.widget.ConstraintLayout>