<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_requests">

    <fragment
        android:id="@+id/navigation_requests"
        android:name="com.example.restly.ui.requests.RequestsFragment"
        android:label="@string/requests_tab_title"
        tools:layout="@layout/fragment_requests" />

    <fragment
        android:id="@+id/navigation_history"
        android:name="com.example.restly.ui.history.HistoryFragment"
        android:label="@string/history_tab_title"
        tools:layout="@layout/fragment_history" />

    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.restly.ui.settings.SettingsFragment"
        android:label="@string/settings_tab_title"
        tools:layout="@layout/fragment_settings" />
</navigation>